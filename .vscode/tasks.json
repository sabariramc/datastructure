{
    "tasks": [
        {
            "type": "shell",
            "label": "g++ build",
            "command": "/bin/g++",
            "args": [
                "-g",
                "*.cpp",
                "*.h",
                "-o",
                "bin/${workspaceFolderBasename}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "runOptions": {},
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "g++ run",
            "command": "bin/${workspaceFolderBasename}",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
        }
    ],
    "version": "2.0.0"
}