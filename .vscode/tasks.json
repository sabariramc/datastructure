{
    "tasks": [
        {
            "type": "shell",
            "label": "cmake run build",
            "command": "/usr/bin/cmake",
            "args": [
                "../.."
            ],
            "options": {
                "cwd": "${workspaceFolder}/bin/build"
            },
            "runOptions": {},
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "cmake debug build",
            "command": "/usr/bin/cmake",
            "args": [
                "-DCMAKE_BUILD_TYPE=Debug",
                "../.."
            ],
            "options": {
                "cwd": "${workspaceFolder}/bin/debug"
            },
            "runOptions": {},
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "cmake debug link",
            "command": "/usr/bin/cmake",
            "args": [
                "--build",
                "."
            ],
            "options": {
                "cwd": "${workspaceFolder}/bin/debug"
            },
            "runOptions": {},
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}